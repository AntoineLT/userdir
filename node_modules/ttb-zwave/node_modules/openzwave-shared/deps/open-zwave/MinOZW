#!/bin/sh
LD_PATH=/root/userdir/node_modules/ttb-zwave/node_modules/openzwave-shared/deps/open-zwave
if test $# -gt 0; then
	if test $1 == "gdb"; then
		LD_LIBRARY_PATH="$LD_PATH:$LD_LIBRARY_PATH" gdb .lib/MinOZW
	else
		LD_LIBRARY_PATH="$LD_PATH:$LD_LIBRARY_PATH" .lib/MinOZW $@
	fi
else 
	LD_LIBRARY_PATH="$LD_PATH:$LD_LIBRARY_PATH" .lib/MinOZW
fi
